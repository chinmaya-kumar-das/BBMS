<%- include('../includes/navigation.ejs') %>
<section class="main">
  <div class="main-content tabcontent" id="bag">

    <div class="new-items ">
      <div class="new-items_conatiner">
        <h2>new blood bags</h2>
        <p class="red">bags info</p>
        
        <form action="/edit-bag" method="POST" class="new-items_form">
          <label for="bloodType" class="new-items_label">Blood Type</label>
          <select name="bloodType" id="bloodType" class="new-items_select type">
            <option value="a+">a+</option>
            <option value="a-">a-</option>
            <option value="o+">o+</option>
            <option value="o-">o-</option>
            <option value="b+">b+</option>
            <option value="b-">b-</option>
            <option value="ab+">ab+</option>
            <option value="ab-">ab-</option>
            <option value="<%if(editing) {%><%=bag.bloodType%><% } %>">
              <%if(editing) {%><%=bag.bloodType%><% } %></option>
          </select>

          <label for="charityName" class="new-items_label">Charity Name</label>
          <input class="new-items_input" type="text" name="charityName" id="charityName"
            value="<% if (editing) { %><%= bag.charityName %><% } %>" />

          <label for="donorName" class="new-items_label">Donor Name</label>
          <input class="new-items_input" type="text" name="donorName" id="donorName"
            value="<% if (editing) { %><%= bag.donorName %><% } %>">

          <label for="bloodQuantity" class="new-items_label">Quantity</label>
          <input class="new-items_input" type="text" name="bloodQuantity" id="bloodQuantity"
            value="<% if (editing) { %><%= bag.bloodQuantity %><% } %>" />

            <% if (editing) { %>
              <input type="hidden" value="<%= bag._id %>" name="bagId">
              <% } %>

              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="add-new add-new_float addnewrs" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>


<%- include('../includes/bottom.ejs') %>