<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Blood Donar</title>
      <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap"
      rel="stylesheet"
    />


    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
  </head>

  <body>
    <main>
      <!-- <img class="wave" src="/images/login/wave.png" /> -->
      <div class="container">
        <div class="img">
          <img src="/images/login/logbg.svg" alt="login background" />
        </div>
        <div class="login-content">
          <form class="login" action="/log-in" method="POST">
            <img src="/images/user/profile.svg" alt="login profile photo" />
            <h2 class="title">Welcome</h2>
            <div class="input-div one">
              <div class="i">
                <i class="fas fa-user"></i>
              </div>
              <div class="div">
                <h5>Username</h5>
                <label for="email"></label>
                <input
                  class="input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                  type="email"
                  name="email"
                  id="email"
                  value="<%= oldInput.email %>"
                />
              </div>
            </div>
            <div class="input-div pass">
              <div class="i">
                <i class="fas fa-lock"></i>
              </div>
              <div class="div">
                <h5>Password</h5>
                <label for="password"></label>
                <input
                  type="password"
                  class="input <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                  name="password"
                  id="password"
                  value="<%= oldInput.password %>"
                />
              </div>
            </div>
            <a href="/reset">Forgot Password?</a>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="submit" class="btn" value="Login" />
            <p>Or</p>
            <a href="/sign-up" class="btn">SignUp</a>
            <% if (errorMessage) { %>
            <div class="user-message user-message--error">
              <%= errorMessage %>
            </div>
            <% } %>
          </form>
        </div>
      </div>
    </main>
    <script type="text/javascript" src="/js/login.js"></script>
  </body>
</html>
